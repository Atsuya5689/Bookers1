<div class="flash"><%= flash[:notice] %></div>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class="a"><strong>Title</strong></th>
      <th class="b"><strong>Body</strong></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <td><%= link_to "Show", book_path(book.id), class: "show" %></td>
        <td><%= link_to "Edit", edit_book_path(book.id), class: "edit" %></td>
        <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" =>  "Are you sureï¼Ÿ", class: "delete" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>


<% if @book.errors.any? %>
<div class="create-error">
  <div class="error-title">
    <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
  </div>
  <div class="error-body">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="form">
<%= form_with model: @book do |f|%>
  <div class="error-form-title">
  <h4>title</h4>
  </div>
  <div class="error-form">
  <%= f.text_field :title %>
  </div>
  <div class="error-form-title">
  <h4>body</h4>
  </div>
  <div class="error-form">
  <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book', class: 'button' %>
<% end %>
</div>

<% else %>
  <div class="form">
<%= form_with model: @book do |f|%>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: 'button' %>
<% end %>
</div>
<% end %>




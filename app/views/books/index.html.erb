<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><p><strong>Title</strong></p></th>
      <th><p><strong>body</strong></p></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "delete", destroy_book_path(book.id), method: :delete, "data-confirm" =>  "Are you sure？" %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<% if @book.errors.any? %>
  <%= @book.errors. count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="create-error">
    <div class="error-title">
      <%= @book.errors.count %>error prohibited this book from being saved:
    </div>
    <div class="error-body">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <div class="form">
    <div class="error-form-title">
      <h4>Title</h4>
    </div>
    <div class="error-form">
      <%= f.text_field :title %>
    </div>
    <div class="error-form-title" >
      <h4>Body</h4>
    </div>
    <div class="error-form">
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Update Book', class: "button"%>
  </div>

  <% end %>
<% else %>
  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <div class="form">
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Update Book', class: "button"%>
  </div>

  <% end %>
<% end %>


<%= link_to "show", book_path(@book.id), class: "show" %> |<%= link_to "back", "/books", class: "show" %>